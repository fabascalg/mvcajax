@{
    ViewData["Title"] = "Home Page";
}

<script>
    $(document).ready(function () {
        $("#boton").click(function () {
            $.get("home/datos",function(texto){
                $("#mitabla").append("<tr><td>"+texto+"</td></tr>");
            })
        })
    })
</script>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<h5>Trabajando con un array de forma local (lado cliente)</h5>
<table id="mitabla">
    <tr>
        <th>
            textos
        </th>
    </tr>

    @foreach (var texto in ViewBag.textos)
    {
        <tr>
            <td>
                <div>@texto</div>
            </td>
        </tr>
    }
    <br>
</table>
<hr>
<input type="button" id="boton" name="boton" value="agregar item localmente...">